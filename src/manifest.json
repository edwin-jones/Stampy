{
  "manifest_version": 2,
  "name": "Stampy",
  "short_name" : "Stampy",
  "description" : "A simple unix timestamp to readable date converter extension for your browser.",
  "version": "1.1.0",
  "browser_action": {
    "default_icon": "logo16.png",
    "icons": {
      "16": "logo16.png",
      "48": "logo48.png",
      "128": "logo128.png"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "activeTab"
  ]
}