{
  "manifest_version": 2,
  "name": "Stampy",
  "version": "0.1.0",
  "browser_action": {
    "default_icon": "browser-icon.png",
    "icons": {
      "16": "browser-icon.png",
      "48": "browser-icon.png",
      "128": "browser-icon.png"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "activeTab"
  ]
}